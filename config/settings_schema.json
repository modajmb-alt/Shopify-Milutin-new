[
  {
    "name": "theme_info",
    "theme_name": "Milutin",
    "theme_version": "1.0.0",
    "theme_author": "Milutin",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32 x 32px recommended"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#757575"
      },
      {
        "type": "header",
        "content": "Background and text"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_foreground",
        "label": "Text",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border",
        "default": "#E5E5E5"
      },
      {
        "type": "header",
        "content": "Status colors"
      },
      {
        "type": "color",
        "id": "color_error",
        "label": "Error",
        "default": "#D32F2F"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success",
        "default": "#388E3C"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "helvetica_n4",
        "label": "Heading font"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "helvetica_n4",
        "label": "Body font"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@shopify"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/shopify"
      }
    ]
  },
  {
    "name": "Newsletter popup",
    "settings": [
      {
        "type": "checkbox",
        "id": "newsletter_popup_enabled",
        "label": "Enable newsletter popup",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "newsletter_popup_image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "newsletter_popup_title",
        "label": "Title",
        "default": "Get 10% Off"
      },
      {
        "type": "textarea",
        "id": "newsletter_popup_text",
        "label": "Text",
        "default": "Subscribe to our newsletter and get 10% off your first order."
      },
      {
        "type": "text",
        "id": "newsletter_popup_button",
        "label": "Button text",
        "default": "Subscribe"
      },
      {
        "type": "text",
        "id": "newsletter_popup_disclaimer",
        "label": "Disclaimer text",
        "default": "By subscribing, you agree to receive marketing emails."
      },
      {
        "type": "range",
        "id": "newsletter_popup_delay",
        "min": 1,
        "max": 30,
        "step": 1,
        "default": 5,
        "unit": "sec",
        "label": "Delay before showing"
      },
      {
        "type": "range",
        "id": "newsletter_popup_days",
        "min": 1,
        "max": 90,
        "step": 1,
        "default": 30,
        "unit": "d",
        "label": "Days to hide after dismissal"
      }
    ]
  }
]
