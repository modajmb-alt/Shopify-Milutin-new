{%- comment -%}
  Password Page
  Shown when store is password protected
{%- endcomment -%}

<section class="password-page">
  <div class="password-page__container">
    <div class="password-page__logo">
      {%- if settings.logo != blank -%}
        <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
      {%- else -%}
        <span class="password-page__logo-text">{{ shop.name }}</span>
      {%- endif -%}
    </div>

    <h1 class="password-page__title">{{ 'password.title' | t }}</h1>

    {%- if section.settings.show_message -%}
      <p class="password-page__message">
        {{ section.settings.message | default: 'password.message' | t }}
      </p>
    {%- endif -%}

    <div class="password-page__form-wrapper" id="PasswordForm">
      {%- form 'storefront_password', class: 'password-page__form' -%}
        {%- if form.errors -%}
          <div class="password-page__error">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="password-page__field">
          <label for="Password" class="visually-hidden">{{ 'password.password_label' | t }}</label>
          <input
            type="password"
            id="Password"
            name="password"
            placeholder="{{ 'password.password_placeholder' | t }}"
            class="password-page__input"
            required
          >
        </div>

        <button type="submit" class="password-page__submit btn btn--primary btn--full">
          {{ 'password.enter' | t }}
        </button>
      {%- endform -%}
    </div>

    {%- if section.settings.show_newsletter -%}
      <div class="password-page__newsletter">
        <p class="password-page__newsletter-title">{{ 'password.newsletter_title' | t }}</p>

        {%- form 'customer', class: 'password-page__newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="password-page">
          <div class="password-page__newsletter-field">
            <input
              type="email"
              name="contact[email]"
              placeholder="{{ 'footer.newsletter.placeholder' | t }}"
              class="password-page__input"
              required
            >
            <button type="submit" class="password-page__newsletter-btn btn btn--primary">
              {{ 'footer.newsletter.submit' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_social -%}
      <div class="password-page__social">
        {%- if settings.social_facebook_link != blank -%}
          <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">
            {% render 'icon-facebook' %}
          </a>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">
            {% render 'icon-instagram' %}
          </a>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" target="_blank" rel="noopener" aria-label="TikTok">
            {% render 'icon-tiktok' %}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <footer class="password-page__footer">
      <p>{{ 'password.powered_by' | t }} <a href="https://www.shopify.com" target="_blank" rel="noopener">Shopify</a></p>
      {%- if section.settings.show_admin_link -%}
        <p><a href="/admin">{{ 'password.admin_link' | t }}</a></p>
      {%- endif -%}
    </footer>
  </div>
</section>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-8);
    background-color: var(--color-background);
  }

  .password-page__container {
    width: 100%;
    max-width: 400px;
    text-align: center;
  }

  .password-page__logo {
    margin-bottom: var(--spacing-10);
  }

  .password-page__logo img {
    max-height: 50px;
    width: auto;
  }

  .password-page__logo-text {
    font-size: var(--font-size-xl);
    font-weight: 300;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
  }

  .password-page__title {
    font-size: var(--font-size-2xl);
    font-weight: 300;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    margin-bottom: var(--spacing-4);
  }

  .password-page__message {
    font-size: var(--font-size-base);
    color: var(--color-accent);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
  }

  .password-page__form-wrapper {
    margin-bottom: var(--spacing-10);
  }

  .password-page__form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .password-page__error {
    padding: var(--spacing-3);
    background-color: rgba(220, 38, 38, 0.1);
    border: 1px solid var(--color-error);
    color: var(--color-error);
    font-size: var(--font-size-sm);
  }

  .password-page__input {
    width: 100%;
    height: 50px;
    padding: 0 var(--spacing-4);
    font-size: var(--font-size-base);
    border: 1px solid var(--color-border);
    background: var(--color-background);
    text-align: center;
  }

  .password-page__input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .password-page__submit {
    height: 50px;
  }

  .password-page__newsletter {
    padding-top: var(--spacing-8);
    border-top: 1px solid var(--color-border);
    margin-bottom: var(--spacing-8);
  }

  .password-page__newsletter-title {
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    margin-bottom: var(--spacing-4);
  }

  .password-page__newsletter-field {
    display: flex;
    gap: var(--spacing-2);
  }

  .password-page__newsletter-field .password-page__input {
    flex: 1;
    text-align: left;
  }

  .password-page__newsletter-btn {
    flex-shrink: 0;
  }

  .password-page__social {
    display: flex;
    justify-content: center;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-8);
  }

  .password-page__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-accent);
    transition: color 0.2s;
  }

  .password-page__social a:hover {
    color: var(--color-primary);
  }

  .password-page__social svg {
    width: 20px;
    height: 20px;
  }

  .password-page__footer {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
  }

  .password-page__footer a {
    color: var(--color-accent);
  }

  .password-page__footer a:hover {
    color: var(--color-primary);
  }

  .password-page__footer p {
    margin-bottom: var(--spacing-2);
  }
</style>

{% schema %}
{
  "name": "Password Page",
  "tag": "section",
  "class": "section-password",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_message",
      "label": "Show message",
      "default": true
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "default": "We're working on something exciting. Enter your password to access the store or sign up to be notified when we launch."
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_admin_link",
      "label": "Show admin link",
      "default": true
    }
  ]
}
{% endschema %}
