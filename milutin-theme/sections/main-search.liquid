{%- liquid
  assign products_per_page = section.settings.products_per_page
-%}

<div class="search-page">
  <div class="container">
    <header class="search-page__header">
      <h1 class="search-page__title">{{ 'search.title' | t }}</h1>

      <form action="{{ routes.search_url }}" method="get" role="search" class="search-page__form">
        <div class="search-page__field">
          <label for="SearchPageInput" class="visually-hidden">{{ 'search.title' | t }}</label>
          <input
            type="search"
            id="SearchPageInput"
            name="q"
            value="{{ search.terms | escape }}"
            class="search-page__input"
            placeholder="{{ 'search.placeholder' | t }}"
            autocomplete="off"
          >
          <input type="hidden" name="type" value="product">
          <button type="submit" class="search-page__submit icon-btn" aria-label="{{ 'search.submit' | t }}">
            {% render 'icon-search' %}
          </button>
        </div>
      </form>
    </header>

    {%- if search.performed -%}
      {%- if search.results_count > 0 -%}
        <p class="search-page__count">
          {{ 'search.results_count' | t: count: search.results_count }}
          {{ 'search.for' | t }} "{{ search.terms }}"
        </p>

        <div class="search-page__results">
          <ul class="product-grid product-grid--{{ section.settings.columns_desktop }}-col" role="list">
            {%- paginate search.results by products_per_page -%}
              {%- for item in search.results -%}
                {%- if item.object_type == 'product' -%}
                  <li class="product-grid__item">
                    {% render 'product-card', product: item %}
                  </li>
                {%- endif -%}
              {%- endfor -%}
            {%- endpaginate -%}
          </ul>
        </div>

        {%- paginate search.results by products_per_page -%}
          {%- if paginate.pages > 1 -%}
            <nav class="pagination" aria-label="Pagination">
              <ul class="pagination__list" role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" class="pagination__link pagination__link--prev" aria-label="Previous page">
                      &larr;
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span class="pagination__link pagination__link--current" aria-current="page">{{ part.title }}</span>
                      {%- else -%}
                        <span class="pagination__link pagination__link--gap">{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" class="pagination__link pagination__link--next" aria-label="Next page">
                      &rarr;
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endpaginate -%}

      {%- else -%}
        <div class="search-page__no-results">
          <p>{{ 'search.no_results' | t: query: search.terms }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
            {{ 'cart.continue_shopping' | t }}
          </a>
        </div>
      {%- endif -%}

    {%- else -%}
      <div class="search-page__empty">
        <p>{{ 'search.empty' | t }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Search results",
  "tag": "section",
  "class": "section-search",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Products per page"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "options": [
        {
          "value": "3",
          "label": "3 columns"
        },
        {
          "value": "4",
          "label": "4 columns"
        }
      ],
      "default": "4",
      "label": "Desktop columns"
    }
  ]
}
{% endschema %}
