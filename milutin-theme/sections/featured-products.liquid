{%- liquid
  assign collection = collections[section.settings.collection]
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign products_count = section.settings.products_count
  assign columns = section.settings.columns
  assign show_view_all = section.settings.show_view_all
-%}

<section class="featured-products" data-section-id="{{ section.id }}">
  <div class="container">
    <header class="featured-products__header" data-animate>
      {%- if subheading != blank -%}
        <span class="featured-products__subheading">{{ subheading }}</span>
      {%- endif -%}
      {%- if heading != blank -%}
        <h2 class="featured-products__heading">{{ heading }}</h2>
      {%- endif -%}
    </header>

    <div class="featured-products__grid featured-products__grid--{{ columns }}-col">
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: products_count -%}
          <div
            class="featured-products__item"
            data-animate
            data-animate-delay="{{ forloop.index | times: 100 }}"
          >
            {% render 'product-card', product: product, lazy_load: true %}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..products_count) -%}
          <div
            class="featured-products__item"
            data-animate
            data-animate-delay="{{ forloop.index | times: 100 }}"
          >
            <div class="product-card product-card--placeholder">
              <div class="product-card__media">
                {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'product-card__placeholder-svg' }}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">Primer proizvoda</h3>
                <div class="product-card__price">
                  <span class="product-card__price-regular">{{ 9999 | money }}</span>
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- if show_view_all and collection != blank -%}
      <div class="featured-products__footer" data-animate>
        <a href="{{ collection.url }}" class="featured-products__view-all btn btn--secondary">
          {{ 'products.view_all' | t }} {{ collection.title }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NOVO U PONUDI"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Izabrani komadi"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" },
        { "value": "4", "label": "4 columns" }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}
