<section class="customer-section">
  <div class="customer-section__container">
    <h1 class="customer-section__title">{{ 'customer.login.title' | t }}</h1>

    {%- form 'customer_login', class: 'customer-form' -%}
      {%- if form.errors -%}
        <div class="customer-form__errors">
          <ul>
            {%- for field in form.errors -%}
              <li>{{ form.errors.messages[field] }}</li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      <div class="customer-form__field">
        <label for="CustomerEmail" class="customer-form__label">
          {{ 'customer.login.email' | t }}
        </label>
        <input
          type="email"
          id="CustomerEmail"
          name="customer[email]"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          class="customer-form__input"
          required
        >
      </div>

      <div class="customer-form__field">
        <label for="CustomerPassword" class="customer-form__label">
          {{ 'customer.login.password' | t }}
        </label>
        <input
          type="password"
          id="CustomerPassword"
          name="customer[password]"
          autocomplete="current-password"
          class="customer-form__input"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary btn--full customer-form__submit">
        {{ 'customer.login.sign_in' | t }}
      </button>

      <div class="customer-form__footer">
        <a href="{{ routes.account_recover_url }}" class="customer-form__link">
          {{ 'customer.login.forgot_password' | t }}
        </a>
        <a href="{{ routes.account_register_url }}" class="customer-form__link">
          {{ 'customer.login.create_account' | t }}
        </a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Login",
  "tag": "section",
  "class": "section-main-login"
}
{% endschema %}
