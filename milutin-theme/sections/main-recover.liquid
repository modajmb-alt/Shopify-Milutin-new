<section class="customer-section">
  <div class="customer-section__container">
    <h1 class="customer-section__title">{{ 'customer.recover_password.title' | t }}</h1>

    <div id="RecoverForm">
      {%- form 'recover_customer_password', class: 'customer-form' -%}
        {%- if form.posted_successfully? -%}
          <div class="customer-form__success">
            {{ 'customer.recover_password.success' | t }}
          </div>
        {%- endif -%}

        {%- if form.errors -%}
          <div class="customer-form__errors">
            <ul>
              {%- for field in form.errors -%}
                <li>{{ form.errors.messages[field] }}</li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <p style="font-size: var(--font-size-sm); color: var(--color-accent); margin-bottom: var(--spacing-6); text-align: center;">
          {{ 'customer.recover_password.subtext' | t }}
        </p>

        <div class="customer-form__field">
          <label for="RecoverEmail" class="customer-form__label">
            {{ 'customer.recover_password.email' | t }}
          </label>
          <input
            type="email"
            id="RecoverEmail"
            name="email"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            class="customer-form__input"
            required
          >
        </div>

        <button type="submit" class="btn btn--primary btn--full customer-form__submit">
          {{ 'customer.recover_password.submit' | t }}
        </button>

        <div class="customer-form__footer">
          <a href="{{ routes.account_login_url }}" class="customer-form__link">
            {{ 'customer.recover_password.back_to_login' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Recover Password",
  "tag": "section",
  "class": "section-main-recover"
}
{% endschema %}
