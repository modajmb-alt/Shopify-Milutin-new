{%- liquid
  assign video = section.settings.video
  assign video_url = section.settings.video_url
  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign text_position = section.settings.text_position
  assign text_color = section.settings.text_color
  assign overlay_opacity = section.settings.overlay_opacity
  assign show_scroll_indicator = section.settings.show_scroll_indicator
  assign height = section.settings.height
-%}

<section
  class="video-hero video-hero--{{ height }} video-hero--text-{{ text_position }}"
  data-section-id="{{ section.id }}"
  data-animate
>
  <div class="video-hero__media">
    {%- if video != blank -%}
      {{ video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        class: 'video-hero__video',
        poster: image
      }}
    {%- elsif video_url != blank -%}
      {%- if video_url contains 'youtube' or video_url contains 'youtu.be' -%}
        <div class="video-hero__external" data-video-background data-video-url="{{ video_url }}"></div>
      {%- else -%}
        <video
          class="video-hero__video"
          autoplay
          loop
          muted
          playsinline
          poster="{{ image | image_url: width: 1920 }}"
        >
          <source src="{{ video_url }}" type="video/mp4">
        </video>
      {%- endif -%}
    {%- elsif image != blank -%}
      <picture>
        {%- if image_mobile != blank -%}
          <source media="(max-width: 749px)" srcset="{{ image_mobile | image_url: width: 800 }}">
        {%- endif -%}
        {{ image | image_url: width: 2000 | image_tag:
          class: 'video-hero__image',
          loading: 'eager',
          fetchpriority: 'high',
          widths: '800, 1200, 1600, 2000'
        }}
      </picture>
    {%- else -%}
      <div class="video-hero__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      </div>
    {%- endif -%}

    {%- if overlay_opacity > 0 -%}
      <div class="video-hero__overlay" style="--overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}"></div>
    {%- endif -%}
  </div>

  <div class="video-hero__content" style="--text-color: {{ text_color }}">
    <div class="container">
      <div class="video-hero__text" data-animate-fade>
        {%- if heading != blank -%}
          <h1 class="video-hero__heading">{{ heading }}</h1>
        {%- endif -%}
        {%- if subheading != blank -%}
          <p class="video-hero__subheading">{{ subheading }}</p>
        {%- endif -%}
        {%- if button_text != blank and button_link != blank -%}
          <a href="{{ button_link }}" class="video-hero__button btn btn--primary">
            {{ button_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- if show_scroll_indicator -%}
    <div class="video-hero__scroll" data-animate-fade>
      <span class="video-hero__scroll-text">Scroll</span>
      <span class="video-hero__scroll-line"></span>
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Video hero",
  "tag": "section",
  "class": "section-video-hero",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Hosted video file"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Or video URL",
      "info": "YouTube or direct MP4 link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (fallback)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NOVA KOLEKCIJA"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Jesen / Zima 2024"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "POGLEDAJ"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "options": [
        { "value": "full", "label": "Full screen" },
        { "value": "large", "label": "Large (90vh)" },
        { "value": "medium", "label": "Medium (70vh)" }
      ],
      "default": "full"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "bottom-left", "label": "Bottom left" },
        { "value": "bottom-center", "label": "Bottom center" }
      ],
      "default": "bottom-center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 70,
      "step": 5,
      "default": 20,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Video hero"
    }
  ]
}
{% endschema %}
