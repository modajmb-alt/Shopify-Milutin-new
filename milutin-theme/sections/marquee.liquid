{%- liquid
  assign text = section.settings.text
  assign link = section.settings.link
  assign speed = section.settings.speed
  assign direction = section.settings.direction
  assign color_scheme = section.settings.color_scheme
  assign repeat_count = 10
-%}

<section class="marquee marquee--{{ color_scheme }}" data-section-id="{{ section.id }}">
  <div class="marquee__track" data-marquee data-speed="{{ speed }}" data-direction="{{ direction }}">
    <div class="marquee__content">
      {%- for i in (1..repeat_count) -%}
        {%- if link != blank -%}
          <a href="{{ link }}" class="marquee__item">
            <span class="marquee__text">{{ text }}</span>
            <span class="marquee__separator" aria-hidden="true">•</span>
          </a>
        {%- else -%}
          <span class="marquee__item">
            <span class="marquee__text">{{ text }}</span>
            <span class="marquee__separator" aria-hidden="true">•</span>
          </span>
        {%- endif -%}
      {%- endfor -%}
    </div>
    <div class="marquee__content" aria-hidden="true">
      {%- for i in (1..repeat_count) -%}
        {%- if link != blank -%}
          <a href="{{ link }}" class="marquee__item" tabindex="-1">
            <span class="marquee__text">{{ text }}</span>
            <span class="marquee__separator">•</span>
          </a>
        {%- else -%}
          <span class="marquee__item">
            <span class="marquee__text">{{ text }}</span>
            <span class="marquee__separator">•</span>
          </span>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Marquee",
  "tag": "section",
  "class": "section-marquee",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "BESPLATNA DOSTAVA ZA PORUDŽBINE PREKO 5.000 RSD"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link (optional)"
    },
    {
      "type": "select",
      "id": "speed",
      "label": "Speed",
      "options": [
        { "value": "slow", "label": "Slow" },
        { "value": "normal", "label": "Normal" },
        { "value": "fast", "label": "Fast" }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direction",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" },
        { "value": "accent", "label": "Accent" }
      ],
      "default": "dark"
    }
  ],
  "presets": [
    {
      "name": "Marquee"
    }
  ]
}
{% endschema %}
