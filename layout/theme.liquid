<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- comment -%} Performance: Preconnect to external domains {%- endcomment -%}
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="dns-prefetch" href="https://fonts.shopifycdn.com">

    {%- comment -%} Preload critical CSS for faster first paint {%- endcomment -%}
    <link rel="preload" href="{{ 'base.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'section-header.css' | asset_url }}" as="style">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {%- comment -%} Organization Schema - tells Google about your business {%- endcomment -%}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": {{ shop.name | json }},
      "url": "{{ shop.url }}",
      {%- if settings.logo != blank -%}
      "logo": "https:{{ settings.logo | image_url: width: 500 }}",
      {%- endif -%}
      {%- if settings.social_facebook != blank or settings.social_instagram != blank or settings.social_twitter != blank -%}
      "sameAs": [
        {%- if settings.social_facebook != blank -%}"{{ settings.social_facebook }}"{%- endif -%}
        {%- if settings.social_instagram != blank -%}{%- if settings.social_facebook != blank -%},{%- endif -%}"{{ settings.social_instagram }}"{%- endif -%}
        {%- if settings.social_twitter != blank -%}{%- if settings.social_facebook != blank or settings.social_instagram != blank -%},{%- endif -%}"{{ settings.social_twitter }}"{%- endif -%}
        {%- if settings.social_youtube != blank -%}{%- if settings.social_facebook != blank or settings.social_instagram != blank or settings.social_twitter != blank -%},{%- endif -%}"{{ settings.social_youtube }}"{%- endif -%}
        {%- if settings.social_tiktok != blank -%}{%- if settings.social_facebook != blank or settings.social_instagram != blank or settings.social_twitter != blank or settings.social_youtube != blank -%},{%- endif -%}"{{ settings.social_tiktok }}"{%- endif -%}
      ],
      {%- endif -%}
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": ["Serbian", "English"]
      }
    }
    </script>

    {%- comment -%} WebSite Schema - enables sitelinks search box in Google {%- endcomment -%}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "url": "{{ shop.url }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>

    {%- comment -%} Critical CSS - loads on every page {%- endcomment -%}
    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'section-header.css' | asset_url | stylesheet_tag }}
    {{ 'section-footer.css' | asset_url | stylesheet_tag }}

    {%- comment -%} Page-specific CSS - only loads when needed {%- endcomment -%}
    {{ 'section-search.css' | asset_url | stylesheet_tag }}

    {%- if template.name == 'index' -%}
      {{ 'sections-homepage.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- if template.name == 'collection' or template.name == 'search' -%}
      {{ 'section-collection.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- if template.name == 'product' -%}
      {{ 'section-product.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- if template.name == 'cart' or settings.cart_type == 'drawer' -%}
      {{ 'section-cart.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- if template.directory == 'customers' -%}
      {{ 'section-customers.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- comment -%} Product cards appear on multiple pages {%- endcomment -%}
    {%- if template.name == 'index' or template.name == 'collection' or template.name == 'search' or template.name == 'product' -%}
      {{ 'product-card-enhancements.css' | asset_url | stylesheet_tag }}
    {%- endif -%}

    {%- unless settings.type_body_font.system? -%}
      {{ settings.type_body_font | font_url | preload_tag: as: 'font', type: 'font/woff2', crossorigin: 'anonymous' }}
    {%- endunless -%}
    {%- unless settings.type_header_font.system? -%}
      {{ settings.type_header_font | font_url | preload_tag: as: 'font', type: 'font/woff2', crossorigin: 'anonymous' }}
    {%- endunless -%}

    {{ content_for_header }}

    <style>
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};
        --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-heading-style: {{ settings.type_header_font.style }};
        --font-heading-weight: {{ settings.type_header_font.weight }};

        --color-primary: {{ settings.color_primary }};
        --color-secondary: {{ settings.color_secondary }};
        --color-accent: {{ settings.color_accent }};
        --color-background: {{ settings.color_background }};
        --color-foreground: {{ settings.color_foreground }};
        --color-border: {{ settings.color_border }};
        --color-error: {{ settings.color_error }};
        --color-success: {{ settings.color_success }};
      }
    </style>

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
    <script>
      window.routes = {
        predictive_search_url: '{{ routes.predictive_search_url }}'
      };
      window.shopCurrency = {{ cart.currency.iso_code | json }};
      window.translations = {
        searchPlaceholder: {{ 'search.placeholder' | t | json }},
        searchNoResults: {{ 'search.no_results_short' | t | json }},
        addToCart: {{ 'products.add_to_cart' | t | json }},
        adding: {{ 'products.adding' | t | json }},
        added: {{ 'products.added' | t | json }},
        soldOut: {{ 'products.sold_out' | t | json }},
        unavailable: {{ 'products.unavailable' | t | json }},
        sale: {{ 'products.sale' | t | json }},
        addToWishlist: {{ 'products.add_to_wishlist' | t | json }},
        removeFromWishlist: {{ 'products.remove_from_wishlist' | t | json }}
      };
    </script>
  </head>

  <body class="template-{{ template.name }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">
    <a class="skip-link visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_content' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="MainContent" class="main-content" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {%- comment -%} Safety net: reveal animated elements if animation JS fails to load {%- endcomment -%}
    {%- if template.name == 'index' -%}
      <script>
        window.addEventListener('load', function() {
          setTimeout(function() {
            var els = document.querySelectorAll('[data-animate]:not(.is-visible),[data-animate-fade]:not(.is-visible),[data-animate-slide]:not(.is-visible)');
            for (var i = 0; i < els.length; i++) els[i].classList.add('is-visible');
          }, 2000);
        });
      </script>
    {%- endif -%}

    {%- comment -%} Critical JS - loads on every page {%- endcomment -%}
    <script src="{{ 'section-header.js' | asset_url }}" defer></script>
    <script src="{{ 'section-search.js' | asset_url }}" defer></script>

    {%- comment -%} Page-specific JS - only loads when needed {%- endcomment -%}
    {%- if template.name == 'index' -%}
      <script src="{{ 'sections-homepage.js' | asset_url }}" defer></script>
    {%- endif -%}

    {%- if template.name == 'collection' or template.name == 'search' -%}
      <script src="{{ 'section-collection.js' | asset_url }}" defer></script>
    {%- endif -%}

    {%- if template.name == 'product' -%}
      <script src="{{ 'section-product.js' | asset_url }}" defer></script>
    {%- endif -%}

    {%- comment -%} Cart JS needed for drawer on all pages, or cart page {%- endcomment -%}
    {%- if settings.cart_type == 'drawer' or template.name == 'cart' -%}
      <script src="{{ 'section-cart.js' | asset_url }}" defer></script>
    {%- endif -%}

    {%- comment -%} Product card enhancements (wishlist, quick view, quick add) {%- endcomment -%}
    {%- if template.name == 'index' or template.name == 'collection' or template.name == 'search' or template.name == 'product' -%}
      <script src="{{ 'product-card-enhancements.js' | asset_url }}" defer></script>
    {%- endif -%}

    {% render 'quick-view-modal' %}
    {% render 'size-guide-modal' %}

    {%- if settings.cart_type == 'drawer' -%}
      {% section 'cart-drawer' %}
    {%- endif -%}

    {% render 'newsletter-popup' %}
  </body>
</html>
